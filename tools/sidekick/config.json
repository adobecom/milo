{
  "project": "Milo",
  "host": "milo.adobe.com",
  "libraries": [
    {
      "text": "Blocks",
      "paths": ["https://main--milo--adobecom.hlx.page/docs/library/blocks.json"]
    }
  ],
  "plugins": [
    {
      "id": "localize",
      "title": "Localize",
      "environments": [ "edit" ],
      "url": "/tools/loc/index.html",
      "passReferrer": true,
      "include_paths": [ "**.xlsx**" ]
    },
    {
      "title": "Send to CaaS",
      "id": "sendtocaas",
      "environments": ["dev","preview", "live", "prod"],
      "event": "send-to-caas",
      "excludePaths": ["/tools/caas**", "*.json"]
    },
    {
      "title": "Check Schema",
      "id": "checkschema",
      "environments": ["prod"],
      "event": "check-schema",
      "excludePaths": ["/tools**", "*.json"]
    }
  ]
}
